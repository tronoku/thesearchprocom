---
import Layout from '../layouts/Layout.astro';
import OptimizedHero from '../components/common/OptimizedHero.astro';
import Breadcrumbs from '../components/common/Breadcrumbs.astro';
import { mainBreadcrumbs } from '../utils/breadcrumbs';
import { generateServiceSchema } from '../utils/structuredData';

const schema = generateServiceSchema({
  name: "About TheSearchPro",
  description: "Learn about our digital marketing agency and how we help businesses grow online.",
  url: "/about/"
});
---

<Layout 
  title="About Us - Digital Marketing Experts"
  description="Learn about TheSearchPro and our mission to help businesses succeed online through expert digital marketing services."
  type="website"
  schema={schema}
>
  <div class="bg-gray-50">
    <div class="max-w-6xl mx-auto">
      <Breadcrumbs items={mainBreadcrumbs.about} />
    </div>
  </div>

  <OptimizedHero
    title="About TheSearchPro"
    description="We're a team of digital marketing experts passionate about helping businesses succeed online."
    backgroundImage="/images/heroes/about.jpg"
  />

  <!-- Mission Section -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-8">Our Mission</h2>
      <p class="text-gray-600 text-lg text-center mb-12">
        To help businesses achieve sustainable growth through data-driven digital marketing strategies and exceptional service.
      </p>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="bg-blue-50 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-2">Excellence</h3>
          <p class="text-gray-600">We strive for excellence in everything we do.</p>
        </div>
        <div class="text-center">
          <div class="bg-blue-50 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-2">Client Focus</h3>
          <p class="text-gray-600">Your success is our success.</p>
        </div>
        <div class="text-center">
          <div class="bg-blue-50 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-2">Results Driven</h3>
          <p class="text-gray-600">We measure success by your growth.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">Our Process</h2>
      <div class="space-y-12">
        <div class="flex gap-8 items-start">
          <div class="flex-shrink-0 w-12 h-12 rounded-full bg-blue-600 text-white flex items-center justify-center text-xl font-bold">1</div>
          <div>
            <h3 class="text-xl font-bold mb-2">Analysis</h3>
            <p class="text-gray-600">We start by thoroughly analyzing your current online presence and identifying opportunities for improvement.</p>
          </div>
        </div>
        <div class="flex gap-8 items-start">
          <div class="flex-shrink-0 w-12 h-12 rounded-full bg-blue-600 text-white flex items-center justify-center text-xl font-bold">2</div>
          <div>
            <h3 class="text-xl font-bold mb-2">Strategy Development</h3>
            <p class="text-gray-600">Based on our analysis, we create a customized strategy tailored to your business goals and target audience.</p>
          </div>
        </div>
        <div class="flex gap-8 items-start">
          <div class="flex-shrink-0 w-12 h-12 rounded-full bg-blue-600 text-white flex items-center justify-center text-xl font-bold">3</div>
          <div>
            <h3 class="text-xl font-bold mb-2">Implementation</h3>
            <p class="text-gray-600">We execute the strategy using proven techniques and best practices to achieve optimal results.</p>
          </div>
        </div>
        <div class="flex gap-8 items-start">
          <div class="flex-shrink-0 w-12 h-12 rounded-full bg-blue-600 text-white flex items-center justify-center text-xl font-bold">4</div>
          <div>
            <h3 class="text-xl font-bold mb-2">Monitoring & Optimization</h3>
            <p class="text-gray-600">We continuously monitor performance and optimize our approach to ensure the best possible results.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Team Section -->
  <section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">Our Team</h2>
      <!-- Team content -->
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-blue-600 text-white">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-4">Ready to Grow Your Business?</h2>
      <p class="mb-8">Get your free consultation and discover how we can help you succeed online.</p>
      <a 
        href="/contact/" 
        class="bg-white text-blue-600 px-8 py-3 rounded-md font-semibold hover:bg-gray-100"
      >
        Get Your Free Consultation
      </a>
    </div>
  </section>
</Layout> 