---
import Layout from '../../../layouts/Layout.astro';
import OptimizedHero from '../../../components/common/OptimizedHero.astro';
import ServiceFeatures from '../../../components/services/ServiceFeatures.astro';
import ServiceProcess from '../../../components/services/ServiceProcess.astro';
import PricingTable from '../../../components/services/PricingTable.astro';
import FAQ from '../../../components/services/FAQ.astro';
import Results from '../../../components/common/Results.astro';
import ServiceCTA from '../../../components/common/ServiceCTA.astro';
import Breadcrumbs from '../../../components/common/Breadcrumbs.astro';
import { serviceBreadcrumbs } from '../../../utils/breadcrumbs';
import { generateServiceSchema, generateBreadcrumbSchema } from '../../../utils/structuredData';

const BASE_URL = import.meta.env.BASE_URL || '';

const schema = {
  "@context": "https://schema.org",
  "@graph": [
    generateServiceSchema({
      name: "Web Design Services",
      description: "Create a stunning, high-performance website that converts visitors into customers.",
      url: "/services/web-design/"
    }),
    generateBreadcrumbSchema(serviceBreadcrumbs.webDesign)
  ]
};

const features = [
  {
    title: "SEO-Friendly Design",
    description: "Websites built with search engines in mind, ensuring better visibility and rankings.",
    icon: "/images/services/icons/seo-design.svg"
  },
  {
    title: "Responsive Development",
    description: "Mobile-first designs that work perfectly across all devices and screen sizes.",
    icon: "/images/services/icons/responsive.svg"
  },
  {
    title: "Conversion Optimization",
    description: "Strategic layouts and elements designed to convert visitors into customers.",
    icon: "/images/services/icons/conversion.svg"
  }
];

const process = [
  {
    number: 1,
    title: "Discovery & Planning",
    description: "We learn about your business goals and plan a website strategy that aligns with them."
  },
  {
    number: 2,
    title: "Design & Wireframing",
    description: "We create detailed wireframes and designs that focus on user experience and conversions."
  },
  {
    number: 3,
    title: "Development",
    description: "We build your website using modern technologies and SEO best practices."
  },
  {
    number: 4,
    title: "Testing & Launch",
    description: "We thoroughly test your website and ensure a smooth launch."
  }
];

const results = {
  title: "Web Design Impact",
  subtitle: "Our websites deliver measurable results",
  stats: [
    {
      value: "85%",
      label: "Average Increase in Conversion Rate"
    },
    {
      value: "65%",
      label: "Reduction in Bounce Rate"
    },
    {
      value: "3.2x",
      label: "Increase in Page Views per Session"
    }
  ]
};

const pricing = [
  {
    name: "Basic Website",
    price: "From $2,999",
    description: "Perfect for small businesses",
    features: [
      "5 Custom Pages",
      "Mobile Responsive",
      "Basic SEO Setup",
      "Contact Form",
      "Google Analytics",
      "Content Management System"
    ]
  },
  {
    name: "Business Website",
    price: "From $4,999",
    description: "For growing businesses",
    isPopular: true,
    features: [
      "10 Custom Pages",
      "Advanced SEO Features",
      "Blog Setup",
      "Custom Forms",
      "Email Marketing Integration",
      "Speed Optimization",
      "Security Features"
    ]
  },
  {
    name: "E-commerce Website",
    price: "From $7,999",
    description: "For online stores",
    features: [
      "Unlimited Products",
      "Payment Gateway Integration",
      "Inventory Management",
      "Order Tracking",
      "Customer Accounts",
      "Marketing Integrations",
      "Advanced Security"
    ]
  }
];

const faqs = [
  {
    question: "How long does it take to build a website?",
    answer: "A basic website typically takes 4-6 weeks to complete. More complex websites or e-commerce sites may take 8-12 weeks. We'll provide a detailed timeline during our initial consultation."
  },
  {
    question: "Do you provide website maintenance?",
    answer: "Yes, we offer ongoing maintenance packages to keep your website secure, updated, and performing optimally. This includes regular updates, backups, security monitoring, and content updates."
  },
  {
    question: "Will my website be mobile-friendly?",
    answer: "Absolutely! All our websites are built with a mobile-first approach, ensuring they look and function perfectly on all devices, from smartphones to desktop computers."
  },
  {
    question: "Can I update the website myself?",
    answer: "Yes, we build websites with user-friendly content management systems that allow you to easily update content, add pages, and manage your website without technical knowledge."
  }
];

const service = {
  name: "Web Design",
  action: "Build Your Dream Website"
};

---

<Layout 
  title="Web Design Services - Beautiful & High-Converting Websites"
  description="Create a stunning, high-performance website that converts visitors into customers."
  type="service"
  schema={schema}
  ogImage={`${BASE_URL}/images/heroes/web-design.jpg`}
>
  <div class="bg-gray-50">
    <div class="max-w-6xl mx-auto">
      <Breadcrumbs items={serviceBreadcrumbs.webDesign} />
    </div>
  </div>
  
  <OptimizedHero
    backgroundImage="/images/heroes/web-design.jpg"
    title="Web Design Services"
    description="Create a stunning, high-performance website that converts visitors into customers."
  />
  
  <ServiceFeatures features={features} />
  
  <ServiceProcess steps={process} />

  <Results 
    title={results.title}
    subtitle={results.subtitle}
    stats={results.stats}
  />
  
  <section class="py-16 bg-primary">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12 text-white">Website Packages</h2>
      <PricingTable tiers={pricing} />
    </div>
  </section>
  
  <FAQ faqs={faqs} />

  <section class="py-16 bg-primary text-white">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-4">{service.action}</h2>
      <p class="mb-8">Let's create a website that drives results for your business.</p>
      <a 
        href="/contact/" 
        class="bg-white text-primary px-8 py-3 rounded-md font-semibold hover:bg-gray-100"
      >
        Start Your Project
      </a>
    </div>
  </section>
</Layout> 