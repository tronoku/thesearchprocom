---
import Layout from '../../layouts/Layout.astro';
import OptimizedHero from '../../components/common/OptimizedHero.astro';
import Card from '../../components/ui/Card.astro';
import { generateServiceSchema } from '../../utils/structuredData';

const schema = generateServiceSchema({
  name: "Digital Marketing Services",
  description: "Comprehensive digital marketing solutions to help your business grow online.",
  url: "/services/"
});

const services = [
  {
    title: "Search Engine Optimization",
    description: "Improve your search rankings and drive organic traffic with our proven SEO strategies.",
    href: "/services/seo/",
    icon: "search"
  },
  {
    title: "PPC Marketing",
    description: "Drive targeted traffic and conversions with expertly managed paid advertising campaigns.",
    href: "/services/ppc/",
    icon: "ads_click"
  },
  // Add other services
];
---

<Layout 
  title="Digital Marketing Services"
  description="Comprehensive digital marketing solutions to help your business grow online. From SEO to web design, we've got you covered."
  type="website"
  schema={schema}
>
  <OptimizedHero
    title="Digital Marketing Services"
    description="Comprehensive solutions to help your business grow online. From SEO to web design, we've got you covered."
    backgroundImage="/images/heroes/services.jpg"
  />

  <!-- Services Grid -->
  <section class="py-16">
    <div class="max-w-6xl mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {services.map(service => (
          <Card
            href={service.href}
            title={service.title}
            body={service.description}
            icon={service.icon}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-blue-600 text-white">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-4">Ready to Grow Your Business?</h2>
      <p class="mb-8">Get your free consultation and discover how we can help you succeed online.</p>
      <a 
        href="/contact/" 
        class="bg-white text-blue-600 px-8 py-3 rounded-md font-semibold hover:bg-gray-100"
      >
        Get Your Free Consultation
      </a>
    </div>
  </section>
</Layout> 