---
import Layout from '../../layouts/Layout.astro';
import OptimizedHero from '../../components/common/OptimizedHero.astro';
import Card from '../../components/ui/Card.astro';
import { generateServiceSchema } from '../../utils/structuredData';

const schema = generateServiceSchema({
  name: "Digital Marketing Services",
  description: "Comprehensive digital marketing solutions to help your business grow online.",
  url: "/services/"
});

const services = [
  {
    title: "Search Engine Optimization",
    description: "Improve your search rankings and drive organic traffic with our proven SEO strategies.",
    href: "/services/seo/",
    icon: "search"
  },
  {
    title: "PPC Marketing",
    description: "Drive targeted traffic and conversions with expertly managed paid advertising campaigns.",
    href: "/services/ppc/",
    icon: "ads_click"
  },
  {
    title: "Web Design",
    description: "Create a stunning, conversion-focused website that drives results.",
    href: "/services/web-design/",
    icon: "web"
  },
  {
    title: "Social Media Marketing",
    description: "Build and engage your audience across social platforms.",
    href: "/services/social-media-marketing/",
    icon: "share"
  },
  {
    title: "Local Search",
    description: "Dominate your local market and attract nearby customers.",
    href: "/services/local-search/",
    icon: "location_on"
  },
  {
    title: "Maps Optimization",
    description: "Stand out in Google Maps and local search results.",
    href: "/services/maps-optimization/",
    icon: "map"
  },
  {
    title: "Link Building",
    description: "Build authority with quality backlinks and digital PR.",
    href: "/services/link-building/",
    icon: "link"
  },
  {
    title: "Web Analytics",
    description: "Make data-driven decisions with comprehensive analytics.",
    href: "/services/web-analytics/",
    icon: "analytics"
  },
  {
    title: "Brand Marketing",
    description: "Build a strong, memorable brand that resonates with your audience.",
    href: "/services/brand-marketing/",
    icon: "branding_watermark"
  },
  {
    title: "Email Design",
    description: "Create engaging email campaigns that convert.",
    href: "/services/email-design/",
    icon: "email"
  }
];
---

<Layout 
  title="Digital Marketing Services"
  description="Comprehensive digital marketing solutions to help your business grow online. From SEO to web design, we've got you covered."
  type="website"
  schema={schema}
>
  <OptimizedHero
    title="Digital Marketing Services"
    description="Comprehensive solutions to help your business grow online. From SEO to web design, we've got you covered."
    backgroundImage="/images/heroes/services.jpg"
  />

  <!-- Services Grid -->
  <section class="py-16">
    <div class="max-w-6xl mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {services.map(service => (
          <Card
            href={service.href}
            title={service.title}
            body={service.description}
            icon={service.icon}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-blue-600 text-white">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-4">Ready to Grow Your Business?</h2>
      <p class="mb-8">Get your free consultation and discover how we can help you succeed online.</p>
      <a 
        href="/contact/" 
        class="bg-white text-blue-600 px-8 py-3 rounded-md font-semibold hover:bg-gray-100"
      >
        Get Your Free Consultation
      </a>
    </div>
  </section>
</Layout> 