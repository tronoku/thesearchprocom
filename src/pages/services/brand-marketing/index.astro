const service = {
  name: "Brand Marketing",
  action: "Build Your Brand"
};
---

<Layout 
  title="Brand Marketing Services"
  description="Build a powerful brand identity and increase your market presence. Strategic brand marketing services that drive growth."
  type="service"
  schema={schema}
  ogImage={`${BASE_URL}/images/heroes/brand-marketing.jpg`}
>
  <Breadcrumbs items={serviceBreadcrumbs.brandMarketing} />
  
  <ServiceHero
    title="Brand Marketing"
    description="Build a strong, memorable brand that resonates with your audience. Our strategies help you stand out and build lasting connections."
    backgroundImage="/images/heroes/brand-marketing.jpg"
  />
  
  <ServiceFeatures features={features} />
  
  <ServiceProcess steps={process} />

  <Results 
    title={results.title}
    subtitle={results.subtitle}
    stats={results.stats}
  />
  
  <PricingTable tiers={pricing} />
  
  <FAQ faqs={faqs} />

  <ServiceCTA service={service} />
</Layout> 