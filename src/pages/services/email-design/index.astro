---
import Layout from '../../../layouts/Layout.astro';
import OptimizedHero from '../../../components/common/OptimizedHero.astro';
import ServiceFeatures from '../../../components/services/ServiceFeatures.astro';
import ServiceProcess from '../../../components/services/ServiceProcess.astro';
import PricingTable from '../../../components/services/PricingTable.astro';
import FAQ from '../../../components/services/FAQ.astro';
import Results from '../../../components/common/Results.astro';
import ServiceCTA from '../../../components/common/ServiceCTA.astro';
import Breadcrumbs from '../../../components/common/Breadcrumbs.astro';
import { serviceBreadcrumbs } from '../../../utils/breadcrumbs';
import { generateServiceSchema, generateBreadcrumbSchema } from '../../../utils/structuredData';

const BASE_URL = import.meta.env.BASE_URL || '';

const schema = {
  "@context": "https://schema.org",
  "@graph": [
    generateServiceSchema({
      name: "Email Design Services",
      description: "Create email campaigns that engage and convert with our custom email design services.",
      url: "/services/email-design/"
    }),
    generateBreadcrumbSchema(serviceBreadcrumbs.emailDesign)
  ]
};

const features = [
  {
    title: "Custom Email Design",
    description: "Create beautiful, responsive email templates that look great on all devices.",
    icon: "/images/services/icons/email-design.svg"
  },
  {
    title: "Campaign Strategy",
    description: "Develop effective email marketing strategies that drive engagement and conversions.",
    icon: "/images/services/icons/campaign.svg"
  },
  {
    title: "Automation Setup",
    description: "Implement automated email sequences that nurture leads and drive sales.",
    icon: "/images/services/icons/automation.svg"
  }
];

const process = [
  {
    number: 1,
    title: "Strategy Development",
    description: "We create a custom email marketing strategy aligned with your goals."
  },
  {
    number: 2,
    title: "Design & Development",
    description: "We design and build responsive email templates that convert."
  },
  {
    number: 3,
    title: "Campaign Setup",
    description: "We set up your campaigns and automation workflows."
  },
  {
    number: 4,
    title: "Testing & Optimization",
    description: "We test and optimize for maximum deliverability and engagement."
  }
];

const results = {
  title: "Email Marketing Impact",
  subtitle: "Our email design services deliver measurable results",
  stats: [
    {
      value: "32%",
      label: "Average Open Rate"
    },
    {
      value: "15%",
      label: "Click-Through Rate"
    },
    {
      value: "4.2x",
      label: "ROI on Email Campaigns"
    }
  ]
};

const pricing = [
  {
    name: "Email Essentials",
    price: "$999",
    description: "For small businesses",
    features: [
      "3 Email Templates",
      "Basic Automation",
      "Mobile Responsive",
      "A/B Testing",
      "Campaign Setup",
      "Basic Analytics"
    ]
  },
  {
    name: "Email Growth",
    price: "$1,999",
    description: "For growing businesses",
    isPopular: true,
    features: [
      "6 Email Templates",
      "Advanced Automation",
      "Dynamic Content",
      "Segmentation",
      "Custom Integration",
      "Advanced Analytics",
      "Priority Support"
    ]
  },
  {
    name: "Email Enterprise",
    price: "Custom",
    description: "For large organizations",
    features: [
      "Unlimited Templates",
      "Complex Automation",
      "Personalization",
      "API Integration",
      "Custom Reporting",
      "Dedicated Manager",
      "24/7 Support"
    ]
  }
];

const faqs = [
  {
    question: "Are your email templates responsive?",
    answer: "Yes, all our email templates are fully responsive and tested across major email clients and devices to ensure optimal display everywhere."
  },
  {
    question: "Do you integrate with my email platform?",
    answer: "We work with all major email marketing platforms including Mailchimp, Constant Contact, HubSpot, and others. We'll help you choose the best platform for your needs."
  },
  {
    question: "Can you help with email automation?",
    answer: "Yes, we can set up automated email sequences including welcome series, abandoned cart recovery, post-purchase follow-ups, and more."
  },
  {
    question: "How do you measure success?",
    answer: "We track key metrics including open rates, click-through rates, conversion rates, and ROI. We provide regular reports showing the impact of your email campaigns."
