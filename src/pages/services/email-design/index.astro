const service = {
  name: "Email Design",
  action: "Start Converting More Subscribers"
};
---

<Layout 
  title="Email Design Services"
  description="Create email campaigns that engage and convert with our custom email design services. Get better results from your email marketing."
  type="service"
  schema={schema}
  ogImage={`${BASE_URL}/images/heroes/email-design.jpg`}
>
  <div class="bg-gray-50">
    <div class="max-w-6xl mx-auto">
      <Breadcrumbs items={serviceBreadcrumbs.emailDesign} />
    </div>
  </div>
  
  <OptimizedHero
    title="Email Design Services"
    description="Create beautiful, high-converting email campaigns. Our expert team designs responsive emails that engage your subscribers and drive results."
    backgroundImage="/images/heroes/email-design.jpg"
    blurhash="L8CraB5l8^=c}v1bi];g4TK5kXrr"
  />
  
  <ServiceFeatures features={features} />
  
  <ServiceProcess steps={process} />

  <Results 
    title={results.title}
    subtitle={results.subtitle}
    stats={results.stats}
  />
  
  <PricingTable tiers={pricing} />
  
  <FAQ faqs={faqs} />

  <ServiceCTA service={service} />
</Layout> 