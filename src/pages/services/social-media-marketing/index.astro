---

<Layout 
  title="Social Media Marketing Services - TheSearchPro"
  description="Build your brand and engage with customers through strategic social media marketing."
  schema={schema}
>
  <Breadcrumbs items={serviceBreadcrumbs.socialMedia} />
  
  <ServiceHero
    title="Social Media Marketing"
    description="Build your brand and engage with customers through strategic social media marketing. Get real results and grow your online presence."
    icon="/images/services/social-media-hero.svg"
  />
  
  <ServiceFeatures features={features} />
  
  <ServiceProcess steps={process} />

  <Results 
    title={results.title}
    subtitle={results.subtitle}
    stats={results.stats}
  />
  
  <PricingTable tiers={pricing} />
  
  <FAQ faqs={faqs} />

  <ServiceCTA service={service} />
</Layout> 