---
import Layout from '../../../layouts/Layout.astro';
import OptimizedHero from '../../../components/common/OptimizedHero.astro';
import ServiceFeatures from '../../../components/services/ServiceFeatures.astro';
import ServiceProcess from '../../../components/services/ServiceProcess.astro';
import PricingTable from '../../../components/services/PricingTable.astro';
import FAQ from '../../../components/services/FAQ.astro';
import Results from '../../../components/common/Results.astro';
import ServiceCTA from '../../../components/common/ServiceCTA.astro';
import Breadcrumbs from '../../../components/common/Breadcrumbs.astro';
import { serviceBreadcrumbs } from '../../../utils/breadcrumbs';
import { generateServiceSchema, generateBreadcrumbSchema } from '../../../utils/structuredData';

const BASE_URL = import.meta.env.BASE_URL || '';

const schema = {
  "@context": "https://schema.org",
  "@graph": [
    generateServiceSchema({
      name: "Social Media Marketing Services",
      description: "Build your brand and engage with customers through strategic social media marketing.",
      url: "/services/social-media-marketing/"
    }),
    generateBreadcrumbSchema(serviceBreadcrumbs.socialMedia)
  ]
};

const features = [
  {
    title: "Content Strategy",
    description: "Create engaging content that resonates with your target audience and drives engagement.",
    icon: "/images/services/icons/content-strategy.svg"
  },
  {
    title: "Community Management",
    description: "Build and nurture an engaged community around your brand.",
    icon: "/images/services/icons/community.svg"
  },
  {
    title: "Paid Social",
    description: "Strategic paid campaigns to amplify your reach and drive conversions.",
    icon: "/images/services/icons/paid-social.svg"
  }
];

const process = [
  {
    number: 1,
    title: "Social Audit",
    description: "We analyze your current social presence and identify opportunities."
  },
  {
    number: 2,
    title: "Strategy Development",
    description: "We create a custom social media strategy aligned with your goals."
  },
  {
    number: 3,
    title: "Content Creation",
    description: "We develop and publish engaging content across platforms."
  },
  {
    number: 4,
    title: "Growth & Optimization",
    description: "We monitor performance and optimize for better engagement."
  }
];

const results = {
  title: "Social Media Impact",
  subtitle: "Our social media services deliver measurable results",
  stats: [
    {
      value: "245%",
      label: "Average Increase in Engagement"
    },
    {
      value: "185%",
      label: "Growth in Followers"
    },
    {
      value: "2.8x",
      label: "Increase in Social Conversions"
    }
  ]
};

const pricing = [
  {
    name: "Social Starter",
    price: "$999/mo",
    description: "For small businesses",
    features: [
      "3 Social Platforms",
