const service = {
  name: "Social Media",
  action: "Grow Your Social Presence"
};
---

<Layout 
  title="Social Media Marketing Services - Build Your Brand"
  description="Build a powerful social media presence that engages your audience and drives growth."
  type="service"
  schema={schema}
  ogImage={`${BASE_URL}/images/heroes/social-media.jpg`}
>
  <div class="bg-gray-50">
    <div class="max-w-6xl mx-auto">
      <Breadcrumbs items={serviceBreadcrumbs.socialMedia} />
    </div>
  </div>
  
  <OptimizedHero
    backgroundImage="/images/heroes/link-building.jpg"
    title="Social Media Marketing Services"
    description="Build a powerful social media presence that engages your audience and drives growth."
    blurhash="L32jG9o#D4VrR;V@n2o~HXj@yZf5"
  />
  
  <ServiceFeatures features={features} />
  
  <ServiceProcess steps={process} />

  <Results 
    title={results.title}
    subtitle={results.subtitle}
    stats={results.stats}
  />
  
  <PricingTable tiers={pricing} />
  
  <FAQ faqs={faqs} />

  <ServiceCTA service={service} />
</Layout> 