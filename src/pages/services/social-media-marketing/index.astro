const faqs = [
  {
    question: "Which social media platforms do you work with?",
    answer: "We work with all major platforms including Facebook, Instagram, Twitter, LinkedIn, TikTok, and Pinterest. We'll help you identify which platforms are best for reaching your target audience."
  },
