---
import Layout from '../../../layouts/Layout.astro';
import ServiceHero from '../../../components/services/ServiceHero.astro';
import ServiceFeatures from '../../../components/services/ServiceFeatures.astro';
import ServiceProcess from '../../../components/services/ServiceProcess.astro';
import PricingTable from '../../../components/services/PricingTable.astro';
import FAQ from '../../../components/services/FAQ.astro';
import Breadcrumbs from '../../../components/common/Breadcrumbs.astro';
import { serviceBreadcrumbs } from '../../../utils/breadcrumbs';
import { generateServiceSchema, generateBreadcrumbSchema } from '../../../utils/structuredData';
import Results from '../../../components/common/Results.astro';
import CTA from '../../../components/common/CTA.astro';

const schema = {
  "@context": "https://schema.org",
  "@graph": [
    generateServiceSchema({
      name: "Pay Per Click Marketing",
      description: "Drive targeted traffic to your website through strategic PPC campaigns. Get measurable results and maximize your ROI.",
      url: "/services/ppc"
    }),
    generateBreadcrumbSchema(serviceBreadcrumbs.ppc)
  ]
};

const features = [
  {
    title: "Campaign Strategy",
    description: "Custom PPC strategies designed to maximize your ROI and reach your target audience effectively.",
    icon: "/images/services/icons/strategy.svg"
  },
  {
    title: "Conversion Optimization",
    description: "Continuous testing and optimization to improve conversion rates and reduce cost per acquisition.",
    icon: "/images/services/icons/conversion.svg"
  },
  {
    title: "Advanced Analytics",
    description: "Detailed tracking and reporting to measure campaign performance and ROI.",
    icon: "/images/services/icons/analytics.svg"
  }
];

const process = [
  {
    number: 1,
    title: "Account Analysis",
    description: "We review your existing campaigns or research your market to identify opportunities and challenges."
  },
  {
    number: 2,
    title: "Campaign Setup",
    description: "We create optimized campaign structures with targeted ad groups, keywords, and compelling ad copy."
  },
  {
    number: 3,
    title: "Landing Page Optimization",
    description: "We optimize your landing pages to maximize conversions from paid traffic."
  },
  {
    number: 4,
    title: "Ongoing Optimization",
    description: "We continuously monitor and optimize campaigns to improve performance and reduce costs."
  }
];

const pricing = [
  {
    name: "Starter",
    price: "$750/mo",
    description: "For small ad budgets",
    features: [
      "Campaign Setup",
      "Keyword Research",
      "Ad Copywriting",
      "Monthly Optimization",
      "Basic Reporting"
    ]
  },
  {
    name: "Professional",
    price: "$1,500/mo",
    description: "For growing businesses",
    isPopular: true,
    features: [
      "Everything in Starter",
      "Advanced Targeting",
      "A/B Testing",
      "Conversion Tracking",
      "Weekly Optimization",
      "Competitor Analysis"
    ]
  },
  {
    name: "Enterprise",
    price: "Custom",
    description: "For large ad budgets",
    features: [
      "Everything in Professional",
      "Multiple Campaign Types",
      "Custom Analytics",
      "Landing Page Design",
      "Daily Optimization",
      "Strategic Consulting"
    ]
  }
];

const faqs = [
  {
    question: "What's included in your PPC management service?",
    answer: "Our PPC management service includes keyword research, campaign setup, ad copywriting, bid management, conversion tracking, A/B testing, and regular performance optimization. We also provide detailed reporting and strategic recommendations."
  },
  {
    question: "How long does it take to see results from PPC?",
    answer: "Unlike SEO, PPC can deliver immediate traffic to your website. However, it typically takes 2-3 months to optimize campaigns for best performance and ROI as we gather data and refine targeting."
  },
  {
    question: "What platforms do you manage?",
    answer: "We manage campaigns across all major platforms including Google Ads, Microsoft Ads (Bing), Facebook Ads, Instagram Ads, LinkedIn Ads, and other platforms relevant to your business."
  },
  {
    question: "How do you measure PPC success?",
    answer: "We track key metrics including click-through rate (CTR), conversion rate, cost per click (CPC), cost per acquisition (CPA), and return on ad spend (ROAS). We'll work with you to establish specific KPIs aligned with your business goals."
  }
];

const results = {
  title: "Proven PPC Results",
  stats: [
    {
      value: "45%",
      label: "Average Reduction in Cost per Conversion"
    },
    {
      value: "85%",
      label: "Increase in Quality Score"
    },
    {
      value: "3x",
      label: "Average Return on Ad Spend"
    }
  ]
};
---

<Layout 
  title="PPC Management Services - TheSearchPro"
  description="Drive targeted traffic and conversions with our expert PPC management services."
  schema={schema}
>
  <Breadcrumbs items={serviceBreadcrumbs.ppc} />
  
  <ServiceHero
    title="Pay Per Click Marketing"
    description="Drive targeted traffic to your website through strategic PPC campaigns. Get measurable results and maximize your ROI."
    icon="/images/services/ppc-hero.svg"
  />
  
  <ServiceFeatures features={features} />
  
  <ServiceProcess steps={process} />

  <Results title={results.title} stats={results.stats} />
  
  <PricingTable tiers={pricing} />
  
  <FAQ faqs={faqs} />

  <CTA 
    title="Ready to Maximize Your Ad Spend?"
    description="Get your free PPC audit and consultation today!"
    buttonText="Get Your Free PPC Audit"
    buttonLink="/contact"
  />
</Layout> 