---
import Layout from '../layouts/Layout.astro';
import Card from '../components/ui/Card.astro';
import Stats from '../components/common/Stats.astro';
import ServiceHero from '../components/services/ServiceHero.astro';
import OptimizedHero from '../components/common/OptimizedHero.astro';

const stats = [
  {
    value: "100",
    label: "billion Google searches happen every month."
  },
  {
    value: "97%",
    label: "of consumers search online for local businesses"
  },
  {
    value: "75%",
    label: "of these consumers stop at page 1, are you there?"
  }
];

const services = [
  {
    title: "Search Engine Optimization",
    description: "Dominate search rankings with our proven SEO expertise. We combine technical mastery, strategic content, and authoritative link building to deliver sustainable organic growth.",
    link: "/services/seo/"
  },
  {
    title: "Pay Per Click Marketing",
    description: "Transform clicks into customers with data-driven PPC campaigns. Our expert team optimizes every aspect of your paid search strategy to maximize ROI.",
    link: "/services/ppc/"
  },
  {
    title: "Web Design and Development",
    description: "Create stunning, conversion-focused websites that drive results. Our SEO-first approach ensures your site not only looks great but performs exceptionally.",
    link: "/services/web-design/"
  },
  {
    title: "Social Media Marketing",
    description: "Build a powerful brand presence across social platforms. We create engaging campaigns that turn followers into loyal customers and brand advocates.",
    link: "/services/social-media-marketing/"
  }
];

const BASE_URL = import.meta.env.BASE_URL || '';
---

<Layout 
  title="An SEO Company that Gets Results"
  description="Do you know what's keeping your website from growing? Get an instant SEO Report now and find out!"
  ogImage="/images/og-image.jpg"
  type="website"
>
  <main>
    <OptimizedHero
      backgroundImage="/images/heroes/home.jpg"
      title="Your Business Deserves To Be Found Online."
      description="Every month, billions search for businesses like yours. Are you showing up where it matters?"
    >
      <a 
        href="/contact/" 
        class="inline-block bg-blue-600 text-white px-8 py-3 rounded-md font-semibold hover:bg-blue-700 mt-8"
      >
        Get Your Free Quote
      </a>
    </OptimizedHero>
    
    <!-- Stats Section -->
    <section class="py-16 bg-white">
      <div class="max-w-6xl mx-auto px-4">
        <h2 class="text-3xl text-center mb-4">Online Business is <span class="font-bold">Big</span></h2>
        <p class="text-center text-gray-600 mb-12">You need to be seen to succeed.</p>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {stats.map(stat => (
            <div class="text-center">
              <div class="text-4xl font-bold text-blue-600 mb-2">{stat.value}</div>
              <div class="text-gray-600">{stat.label}</div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- What We Do Section -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-6xl mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12">What We Do</h2>
        <div class="max-w-3xl mx-auto space-y-6">
          <p class="text-gray-600">
            We transform your online presence through battle-tested strategies that deliver real results. From Fortune 500 companies to local businesses, we've helped organizations of all sizes multiply their digital growth and revenue.
          </p>
          <p class="text-gray-600">
            While others chase shortcuts, we focus on sustainable, long-term success. Our team stays ahead of industry changes through continuous research and testing, ensuring your business thrives in today's competitive digital landscape.
          </p>
          <p class="text-gray-600">
            By handling the complex technical aspects of digital marketing, we free you to focus on what you do best - serving your customers and growing your business.
          </p>
        </div>
      </div>
    </section>

    <!-- Formula for Success Section -->
    <section class="py-16 bg-white">
      <div class="max-w-6xl mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12">The Formula for Success</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="flex gap-4">
            <div class="flex-shrink-0">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-bold mb-2">Custom-Crafted Strategies</h3>
              <p class="text-gray-600">Every business is unique. We develop tailored solutions that align perfectly with your goals and market position.</p>
            </div>
          </div>
          <div class="flex gap-4">
            <div class="flex-shrink-0">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-bold mb-2">Data-Driven Targeting</h3>
              <p class="text-gray-600">We identify and capture your ideal audience through advanced analytics and strategic optimization, turning visitors into valuable customers.</p>
            </div>
          </div>
          <div class="flex gap-4">
            <div class="flex-shrink-0">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-bold mb-2">Complete Transparency</h3>
              <p class="text-gray-600">No black boxes here. We provide detailed reporting and insights so you always know exactly how your investment is driving growth.</p>
            </div>
          </div>
          <div class="flex gap-4">
            <div class="flex-shrink-0">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"/>
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-bold mb-2">Dedicated Support</h3>
              <p class="text-gray-600">Your success is our success. Our responsive team ensures you have the support and guidance needed to achieve your digital marketing goals.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Brand Logos Section 
    <section class="py-16 bg-gray-50">
      <div class="max-w-6xl mx-auto px-4">
        <h2 class="text-2xl text-center mb-8">Trusted by Industry Leaders</h2>
        <div class="flex flex-wrap justify-center items-center gap-12">
          <img src="/images/clients/enterprise-client.png" alt="Enterprise Client" class="h-12 w-auto grayscale hover:grayscale-0 transition-all" />
          <img src="/images/clients/retail-client.png" alt="Retail Client" class="h-12 w-auto grayscale hover:grayscale-0 transition-all" />
          <img src="/images/clients/technology-client.png" alt="Technology Client" class="h-12 w-auto grayscale hover:grayscale-0 transition-all" />
          <img src="/images/clients/service-client.png" alt="Service Industry Client" class="h-12 w-auto grayscale hover:grayscale-0 transition-all" />
        </div>
      </div>
    </section>

    -->

    <!-- Services Section -->
    <section class="py-16 bg-blue-600">
      <div class="max-w-6xl mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12 text-white">The Search Pro Boosts Your Growth</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {services.map(service => (
            <div class="bg-white p-8 rounded-lg shadow-lg hover:shadow-xl transition-shadow">
              <h3 class="text-2xl font-bold mb-4 text-gray-900">{service.title}</h3>
              <p class="text-gray-600 mb-6">{service.description}</p>
              <a href={service.link} class="inline-flex items-center text-blue-600 font-semibold hover:text-blue-700">
                Learn More
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </a>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 bg-white">
      <div class="max-w-4xl mx-auto px-4 text-center">
        <h2 class="text-3xl font-bold mb-4 text-gray-900">Ready to Grow Your Business?</h2>
        <p class="mb-8 text-gray-600">Get your free SEO analysis and quote today!</p>
        <a href="/contact/" class="bg-blue-600 text-white px-8 py-3 rounded-md font-semibold hover:bg-blue-700">
          Get Your Free Quote
        </a>
      </div>
    </section>
  </main>
</Layout>