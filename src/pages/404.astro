---
import Layout from '../layouts/Layout.astro';
import OptimizedHero from '../components/common/OptimizedHero.astro';
import { generateServiceSchema } from '../utils/structuredData';

const schema = generateServiceSchema({
  name: "Page Not Found",
  description: "The page you're looking for doesn't exist. Let us help you find what you need.",
  url: "/404/"
});
---

<Layout 
  title="Page Not Found"
  description="The page you're looking for doesn't exist. Let us help you find what you need."
  type="website"
  schema={schema}
>
  <main class="min-h-[60vh] flex items-center">
    <div class="max-w-4xl mx-auto px-4 py-16">
      <OptimizedHero
        title="Page Not Found"
        description="The page you're looking for doesn't exist or has been moved. Let's get you back on track."
        backgroundImage="/images/heroes/404.jpg"
      />
      <div class="space-y-6">
        <div class="space-y-4">
          <h2 class="text-2xl font-bold">Popular Services</h2>
          <ul class="space-y-2">
            <li><a href="/services/seo/" class="text-blue-600 hover:underline">Search Engine Optimization</a></li>
            <li><a href="/services/ppc/" class="text-blue-600 hover:underline">Pay Per Click Marketing</a></li>
            <li><a href="/services/web-design/" class="text-blue-600 hover:underline">Web Design Services</a></li>
          </ul>
        </div>
        <div>
          <a 
            href="/" 
            class="inline-block bg-blue-600 text-white px-8 py-3 rounded-md font-semibold hover:bg-blue-700 transition-colors"
          >
            Go to Homepage
          </a>
        </div>
      </div>
    </div>
  </main>
</Layout> 