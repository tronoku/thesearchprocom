---
import Layout from '../layouts/Layout.astro';
import OptimizedHero from '../components/common/OptimizedHero.astro';
import { generateServiceSchema } from '../utils/structuredData';

const schema = generateServiceSchema({
  name: "Page Not Found",
  description: "The page you're looking for doesn't exist. Let us help you find what you need.",
  url: "/404/"
});
---

<Layout 
  title="Page Not Found"
  description="The page you're looking for doesn't exist. Let us help you find what you need."
  type="website"
  schema={schema}
>
  <main class="min-h-screen flex items-center justify-center bg-gray-50">
    <div class="max-w-4xl w-full mx-auto px-6 py-20">
      <div
        class="text-center mb-12">
        <h1 class="text-8xl font-bold text-secondary mb-4">404</h1>
        
        <p>The page you're looking for doesn't exist or has been moved. Let's get you back on track.</p>
          
        
      </div>



        <div class="text-center">
          <a 
            href="/" 
            class="inline-flex items-center justify-center px-8 py-3 rounded-md font-semibold text-white bg-blue-600 hover:bg-blue-700 transition-colors shadow-sm hover:shadow-md"
          >
            Return to Homepage
          </a>
        </div>
      </div>
    </div>
  </main>
</Layout> 