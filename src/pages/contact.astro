---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/forms/ContactForm.astro';
import { generateServiceSchema } from '../utils/structuredData';
import Breadcrumbs from '../components/common/Breadcrumbs.astro';
import { mainBreadcrumbs } from '../utils/breadcrumbs';
import ServiceHero from '../components/services/ServiceHero.astro';

const schema = generateServiceSchema({
  name: "Contact TheSearchPro",
  description: "Get in touch with our digital marketing experts for a free consultation.",
  url: "/contact/"
});

const BASE_URL = import.meta.env.BASE_URL || '';
---

<Layout 
  title="Contact Us - Get Your Free Consultation"
  description="Contact TheSearchPro for expert digital marketing services. Get your free consultation and quote today!"
  type="website"
  schema={schema}
>
  <div class="bg-gray-50">
    <div class="max-w-6xl mx-auto">
      <Breadcrumbs items={mainBreadcrumbs.contact} />
    </div>
  </div>

  <!-- Hero Section -->
  <section 
    class="relative bg-gray-900 text-white py-32"
    style="background-image: linear-gradient(to right, rgba(17, 24, 39, 0.95) 50%, rgba(17, 24, 39, 0.75)), url('/images/heroes/contact.jpg'); background-size: cover; background-position: center;"
  >
    <div class="max-w-6xl mx-auto px-4">
      <div class="max-w-3xl">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
          Let's Grow Your<br/>Business Together
        </h1>
        <p class="text-xl text-gray-300">
          Ready to take your online presence to the next level?<br/>
          Our team is here to help.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        <div>
          <h2 class="text-3xl font-bold mb-6">Get In Touch</h2>
          <p class="text-gray-600 mb-8">
            Fill out the form and one of our digital marketing experts will get back to you within one business day.
          </p>
          
          <div class="space-y-6">
            <div>
              <h3 class="text-lg font-semibold mb-2">Phone</h3>
              <p class="text-gray-600">(206) 800-6382</p>
            </div>
            
            <div>
              <h3 class="text-lg font-semibold mb-2">Email</h3>
              <p class="text-gray-600">sales@thesearchpro.com</p>
            </div>
            
            <div>
              <h3 class="text-lg font-semibold mb-2">Hours</h3>
              <p class="text-gray-600">Monday - Friday: 9am - 5pm PST</p>
            </div>
          </div>
        </div>
        
        <div class="bg-gray-50 p-8 rounded-lg">
          <ContactForm />
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">Common Questions</h2>
      <div class="space-y-8">
        <div>
          <h3 class="text-xl font-bold mb-2">What happens after I submit the form?</h3>
          <p class="text-gray-600">
            One of our digital marketing experts will review your information and contact you within one business day to discuss your needs and how we can help.
          </p>
        </div>
        <div>
          <h3 class="text-xl font-bold mb-2">Do you offer free consultations?</h3>
          <p class="text-gray-600">
            Yes! We provide free initial consultations to understand your business goals and provide tailored recommendations for your digital marketing strategy.
          </p>
        </div>
        <div>
          <h3 class="text-xl font-bold mb-2">What information should I prepare?</h3>
          <p class="text-gray-600">
            It's helpful to have a basic understanding of your business goals, current marketing efforts, and any specific challenges you're facing. We'll guide you through the rest!
          </p>
        </div>
      </div>
    </div>
  </section>
</Layout> 