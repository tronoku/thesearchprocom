---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/forms/ContactForm.astro';
import { generateServiceSchema } from '../utils/structuredData';
import Breadcrumbs from '../components/common/Breadcrumbs.astro';
import { mainBreadcrumbs } from '../utils/breadcrumbs';

const schema = generateServiceSchema({
  name: "Contact TheSearchPro",
  description: "Get in touch with our digital marketing experts for a free consultation.",
  url: "/contact"
});

const BASE_URL = import.meta.env.BASE_URL || '';
---

<Layout 
  title="Contact Us - Get Your Free Consultation"
  description="Contact TheSearchPro for expert digital marketing services. Get your free consultation and quote today!"
  type="website"
  schema={schema}
>
  <div class="bg-gray-50">
    <div class="max-w-6xl mx-auto">
      <Breadcrumbs items={mainBreadcrumbs.contact} />
    </div>
  </div>
  <!-- Hero Section -->
  <section class="relative bg-gray-900 text-white py-20">
    <div class="absolute inset-0 overflow-hidden">
      <img 
        src={`${BASE_URL}/images/heroes/contact-connectivity.jpg`}
        alt=""
        class="w-full h-full object-cover opacity-80"
        loading="eager"
      />
      <div class="absolute inset-0 bg-gray-900/60"></div>
    </div>
    <div class="relative max-w-6xl mx-auto px-4">
      <h1 class="text-5xl font-bold mb-6">Let's Grow Your<br/>Business Together</h1>
      <p class="text-xl mb-8">Ready to take your online presence to the next level?<br/>Our team is here to help.</p>
    </div>
  </section>
  <!-- Rest of the page content... -->
</Layout> 