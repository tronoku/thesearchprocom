---
import Navigation from '../components/layout/Navigation.astro';
import Footer from '../components/layout/Footer.astro';
import PageMeta from '../components/common/PageMeta.astro';
import { generateOrganizationSchema } from '../utils/structuredData';
import FontLoader from '../components/common/FontLoader.astro';

interface Props {
	title: string;
	description: string;
	ogImage?: string;
	type?: 'website' | 'article' | 'service';
	publishedTime?: string;
	modifiedTime?: string;
	schema?: Record<string, any>;
}

const SITE_NAME = 'TheSearchPro';
const SITE_URL = import.meta.env.SITE_URL || 'https://thesearchpro.com';
const BASE_URL = import.meta.env.BASE_URL || '';

const { 
	title, 
	description, 
	ogImage = '/images/og-image.jpg',
	type = 'website',
	publishedTime,
	modifiedTime,
	schema = generateOrganizationSchema()
} = Astro.props;

const path = BASE_URL.length > 1 
	? `${BASE_URL}${Astro.url.pathname}`.replace('//', '/') 
	: Astro.url.pathname;

const seoMeta = {
	title,
	description,
	type,
	image: `${BASE_URL}${ogImage}`,
	path,
	publishedTime,
	modifiedTime,
	siteName: SITE_NAME,
	siteUrl: SITE_URL
};

// Update security headers with stricter CSP
const securityHeaders = {
  'Content-Security-Policy': [
    "default-src 'self'",
    "script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.google.com/maps/",
    "style-src 'self' 'unsafe-inline' https://fonts.googleapis.com",
    "img-src 'self' data: https:",
    "font-src 'self' https://fonts.gstatic.com",
    "frame-src 'self' https://www.google.com/maps/",
    "connect-src 'self'",
    "base-uri 'self'",
    "form-action 'self'",
    "frame-ancestors 'none'",
    "upgrade-insecure-requests",
    "block-all-mixed-content"
  ].join('; ')
};

// Set security headers with proper content types
Astro.response.headers.set('Content-Type', 'text/html; charset=utf-8');
Astro.response.headers.set('Content-Security-Policy', securityHeaders['Content-Security-Policy']);
Astro.response.headers.set('X-Frame-Options', 'DENY');
Astro.response.headers.set('X-Content-Type-Options', 'nosniff');
Astro.response.headers.set('X-XSS-Protection', '1; mode=block');
Astro.response.headers.set('Referrer-Policy', 'strict-origin-when-cross-origin');
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		
		<!-- Preload critical assets -->
		<link rel="preload" as="image" href="/images/logo.svg" />
		<link rel="preload" as="image" href="/images/logo-white.svg" />
		
		<!-- Critical CSS -->
		<style is:inline>
			/* Add critical styles here */
			body { 
				margin: 0;
				text-rendering: optimizeLegibility;
				-webkit-font-smoothing: antialiased;
			}
			.pt-20 { padding-top: 5rem; }
			
			/* Pre-connect to critical domains */
			:root {
				--font-fallback: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
			}
			
			/* Optimize text rendering */
			h1, h2, h3 {
				text-rendering: optimizeLegibility;
				-webkit-font-smoothing: antialiased;
			}
			
			/* Prevent layout shifts */
			img {
				aspect-ratio: attr(width) / attr(height);
			}
			
			/* Optimize hero section */
			.hero-section {
				content-visibility: auto;
				contain: layout paint;
			}
		</style>

		<!-- Security Headers -->
		<meta http-equiv="Content-Security-Policy" content={`
			default-src 'self';
			img-src 'self' data: https:;
			style-src 'self' 'unsafe-inline' https://fonts.googleapis.com;
			font-src 'self' https://fonts.gstatic.com;
			script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.google.com/maps/;
			frame-src 'self' https://www.google.com/maps/;
			connect-src 'self';
			base-uri 'self';
			form-action 'self';
			frame-ancestors 'none';
			upgrade-insecure-requests;
			block-all-mixed-content;
		`}>
		
		<!-- Optimized font loading -->
		<FontLoader />
		
		<!-- Meta tags -->
		<PageMeta {...seoMeta} schema={schema} />
		
		<!-- Other head elements -->
		<link rel="sitemap" type="application/xml" href="/sitemap.xml" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
		<link rel="manifest" href="/site.webmanifest">
		
		<!-- Add preload for critical hero images -->
		<link 
			rel="preload" 
			as="image" 
			href="/images/heroes/home.jpg" 
			fetchpriority="high"
		/>
	</head>
	<body>
		<Navigation />
		<div class="pt-20">
			<slot />
		</div>
		<Footer />
		
		<!-- Defer non-critical scripts -->
		<script async defer src="https://www.googletagmanager.com/gtm.js?id=GTM-M3P7C9"></script>
	</body>
</html>
