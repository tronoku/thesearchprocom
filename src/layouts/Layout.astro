		<!-- Google Tag Manager (noscript) -->
		<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-M3P7C9"
		height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
		<!-- End Google Tag Manager (noscript) -->
		<Navigation />
		<div class="pt-20">
			<slot />
		</div>
		<Footer />

		<!-- Fallback for CSS loading -->
		<noscript>
			<link rel="stylesheet" href={import.meta.env.DEV ? '/src/styles/global.css' : '/styles/global.css'}>
		</noscript>

		<!-- Instead of trying to inline the scripts, let Astro handle them -->
		<script>
			// Put any critical JavaScript here that needs to run immediately
			// For example, dark mode initialization, etc.
		</script>

		<!-- Let Astro handle the hoisted scripts automatically -->
	</body>
</html>
