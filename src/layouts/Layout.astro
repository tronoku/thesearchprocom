---
import Navigation from '../components/layout/Navigation.astro';
import Footer from '../components/layout/Footer.astro';
import PageMeta from '../components/common/PageMeta.astro';
import { generateOrganizationSchema } from '../utils/structuredData';

interface Props {
	title: string;
	description: string;
	ogImage?: string;
	type?: 'website' | 'article' | 'service';
	publishedTime?: string;
	modifiedTime?: string;
	schema?: Record<string, any>;
}

const SITE_NAME = 'TheSearchPro';
const SITE_URL = import.meta.env.SITE_URL || 'https://thesearchpro.com';
const BASE_URL = import.meta.env.BASE_URL || '/';

const { 
	title, 
	description, 
	ogImage = '/images/og-image.jpg',
	type = 'website',
	publishedTime,
	modifiedTime,
	schema = generateOrganizationSchema()
} = Astro.props;

const path = BASE_URL.length > 1 
	? `${BASE_URL}${Astro.url.pathname}`.replace('//', '/') 
	: Astro.url.pathname;

const seoMeta = {
	title,
	description,
	type,
	image: ogImage,
	path,
	publishedTime,
	modifiedTime,
	siteName: SITE_NAME,
	siteUrl: SITE_URL
};
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={`${BASE_URL}/favicon.svg`} />
		
		<!-- Material Icons -->
		<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
		<link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">
		
		<PageMeta
			{...seoMeta}
			schema={schema}
		/>
	</head>
	<body>
		<Navigation />
		<div class="pt-20">
			<slot />
		</div>
		<Footer />
	</body>
</html>
