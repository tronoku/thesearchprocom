---
const mainServices = [
	{ text: 'SEO', href: '/services/seo' },
	{ text: 'PPC', href: '/services/ppc' },
	{ text: 'Social Media', href: '/services/social-media-marketing' },
	{ text: 'Web Design', href: '/services/web-design' },
	{ text: 'Analytics', href: '/services/web-analytics' }
];

const links = [
	{ text: 'Services', href: '/services', children: mainServices },
	{ text: 'About', href: '/about' },
	{ text: 'Contact', href: '/contact' }
];
---

<header class="fixed w-full bg-white shadow-sm z-50">
	<div class="max-w-6xl mx-auto px-4">
		<nav class="flex items-center justify-between h-20">
			<a href="/" class="flex items-center">
				<img src="/images/logo.svg" alt="TheSearchPro" class="h-8">
			</a>

			<!-- Desktop Navigation -->
			<div class="hidden lg:flex items-center gap-8">
				{links.map(link => (
					<div class="relative group">
						<a 
							href={link.href}
							class="text-gray-600 hover:text-blue-600 font-medium py-8"
						>
							{link.text}
							{link.children && (
								<svg class="w-4 h-4 inline-block ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
								</svg>
							)}
						</a>
						
						{link.children && (
							<div class="absolute top-full left-0 bg-white shadow-lg rounded-lg py-4 w-48 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
								{link.children.map(child => (
									<a 
										href={child.href}
										class="block px-6 py-2 text-gray-600 hover:text-blue-600 hover:bg-gray-50"
									>
										{child.text}
									</a>
								))}
							</div>
						)}
					</div>
				))}

				<a 
					href="tel:+1(206)800-6382" 
					class="text-blue-600 font-bold"
				>
					(206) 800-6382
				</a>
				<a 
					href="/contact"
					class="bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700 transition-colors"
				>
					Free Quote
				</a>
			</div>

			<!-- Mobile Menu Button -->
			<button 
				class="lg:hidden p-2" 
				aria-label="Menu" 
				id="mobile-menu-button"
			>
				<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
				</svg>
			</button>
		</nav>

		<!-- Mobile Menu -->
		<div 
			class="lg:hidden hidden bg-white absolute left-0 right-0 top-20 shadow-lg" 
			id="mobile-menu"
		>
			<nav class="px-4 py-6 space-y-4">
				{links.map(link => (
					<div class="space-y-2">
						<a 
							href={link.href}
							class="block text-gray-600 hover:text-blue-600 font-medium"
						>
							{link.text}
						</a>
						{link.children && (
							<div class="pl-4 space-y-2">
								{link.children.map(child => (
									<a 
										href={child.href}
										class="block text-gray-600 hover:text-blue-600"
									>
										{child.text}
									</a>
								))}
							</div>
						)}
					</div>
				))}
				<div class="pt-4 space-y-4">
					<a 
						href="tel:+1(206)800-6382" 
						class="block text-blue-600 font-bold"
					>
						(206) 800-6382
					</a>
					<a 
						href="/contact"
						class="block bg-blue-600 text-white px-6 py-2 rounded-md text-center hover:bg-blue-700 transition-colors"
					>
						Free Quote
					</a>
				</div>
			</nav>
		</div>
	</div>
</header>

<script>
	const button = document.getElementById('mobile-menu-button');
	const menu = document.getElementById('mobile-menu');

	if (button && menu) {
		button.addEventListener('click', () => {
			menu.classList.toggle('hidden');
		});
	}
</script> 