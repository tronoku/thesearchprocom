---
const mainServices = [
	{ text: 'SEO', href: '/services/seo/' },
	{ text: 'PPC', href: '/services/ppc/' },
	{ text: 'Social Media', href: '/services/social-media-marketing/' },
	{ text: 'Web Design', href: '/services/web-design/' },
	{ text: 'Analytics', href: '/services/web-analytics/' }
];

const links = [
	{ text: 'Services', href: '/services/', children: mainServices },
	{ text: 'About', href: '/about/' },
	{ text: 'Contact', href: '/contact/' }
];
---

<header class="fixed w-full bg-white shadow-sm z-50">
	<div class="max-w-6xl mx-auto px-4">
		<nav class="flex justify-between items-center h-20">
			<a href="/" class="flex items-center" aria-label="TheSearchPro Home">
				<svg xmlns="http://www.w3.org/2000/svg" height="42" fill="none" viewBox="0 0 313 73" aria-label="TheSearchPro Logo">
					<title>TheSearchPro</title>
					<desc>TheSearchPro company logo</desc>
					<path fill="#58ade1" d="M84 0h149v73H84z"/>
					<path fill="#fff" d="M101.476 52.4c-1.84 0-3.507-.213-5-.64-1.467-.453-2.774-1.093-3.92-1.92a16.385 16.385 0 0 1-3.08-3l4.12-4.68c1.333 1.787 2.666 2.987 4 3.6 1.36.613 2.76.92 4.2.92.72 0 1.373-.093 1.96-.28.586-.187 1.04-.453 1.36-.8.32-.373.48-.827.48-1.36 0-.4-.107-.76-.32-1.08-.187-.32-.454-.6-.8-.84a5.995 5.995 0 0 0-1.24-.64 9.281 9.281 0 0 0-1.52-.52c-.534-.16-1.08-.293-1.64-.4-1.547-.347-2.894-.773-4.04-1.28-1.147-.507-2.107-1.12-2.88-1.84a7.459 7.459 0 0 1-1.68-2.52c-.374-.96-.56-2.027-.56-3.2 0-1.253.28-2.4.84-3.44a8.756 8.756 0 0 1 2.32-2.72c.986-.773 2.12-1.36 3.4-1.76 1.28-.427 2.613-.64 4-.64 1.84 0 3.413.2 4.72.6 1.333.373 2.466.92 3.4 1.64a10.31 10.31 0 0 1 2.44 2.6l-4.2 4.04a8.578 8.578 0 0 0-1.84-1.72 7.613 7.613 0 0 0-2.08-1.04 7.038 7.038 0 0 0-2.24-.36c-.8 0-1.494.107-2.08.32-.56.187-1 .467-1.32.84-.32.347-.48.773-.48 1.28 0 .453.133.84.4 1.16.266.32.626.613 1.08.88.453.24.973.453 1.56.64.586.16 1.2.293 1.84.4 1.466.293 2.786.68 3.96 1.16 1.2.48 2.226 1.067 3.08 1.76a6.872 6.872 0 0 1 2 2.48c.48.933.72 2.027.72 3.28 0 1.947-.48 3.6-1.44 4.96-.934 1.333-2.227 2.36-3.88 3.08-1.627.693-3.507 1.04-5.64 1.04Z"/>
					<path fill="#1b5083" d="M14.08 52V30H5.76v-6H29.4v6h-8.52v22h-6.8Zm19.451 0V22.4h6.28v12.68l-1.28.48c.294-.96.814-1.827 1.56-2.6a8.837 8.837 0 0 1 2.76-1.92 8.097 8.097 0 0 1 3.36-.72c1.6 0 2.947.333 4.04 1 1.094.64 1.92 1.613 2.48 2.92.56 1.28.84 2.853.84 4.72V52h-6.44V39.48c0-.853-.12-1.56-.36-2.12s-.613-.973-1.12-1.24c-.48-.293-1.08-.427-1.8-.4-.56 0-1.08.093-1.56.28-.48.16-.893.413-1.24.76a3.88 3.88 0 0 0-.84 1.12c-.186.427-.28.893-.28 1.4V52h-6.4Z"/>
				</svg>
			</a>

			<!-- Desktop Navigation -->
			<div class="hidden lg:flex items-center gap-8">
				{links.map(link => (
					<div class="relative group">
						<a 
							href={link.href}
							class="text-gray-600 hover:text-primary font-medium py-8"
						>
							{link.text}
							{link.children && (
								<svg class="w-4 h-4 inline-block ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
								</svg>
							)}
						</a>
						
						{link.children && (
							<div class="absolute top-full left-0 bg-white shadow-lg rounded-lg py-4 w-48 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
								{link.children.map(child => (
									<a 
										href={child.href}
										class="block px-6 py-2 text-gray-600 hover:text-primary hover:bg-gray-50"
									>
										{child.text}
									</a>
								))}
							</div>
						)}
					</div>
				))}

				<a 
					href="tel:+18005138069" 
					class="text-primary font-bold"
				>
					(800) 513-8069
				</a>
				<a 
					href="/contact/"
					class="bg-secondary text-white px-6 py-2 rounded-md hover:bg-secondary-600 transition-colors"
				>
					Free Quote
				</a>
			</div>

			<!-- Mobile Menu Button -->
			<button 
				class="lg:hidden p-2" 
				aria-label="Menu" 
				id="mobile-menu-button"
			>
				<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
				</svg>
			</button>
		</nav>

		<!-- Mobile Menu -->
		<div 
			class="lg:hidden hidden bg-white shadow-lg" 
			id="mobile-menu"
		>
			<nav class="px-4 py-6 space-y-4">
				{links.map(link => (
					<div class="space-y-2">
						<a 
							href={link.href}
							class="block text-gray-600 hover:text-primary font-medium"
						>
							{link.text}
						</a>
						{link.children && (
							<div class="pl-4 space-y-2">
								{link.children.map(child => (
									<a 
										href={child.href}
										class="block text-gray-600 hover:text-primary"
									>
										{child.text}
									</a>
								))}
							</div>
						)}
					</div>
				))}
			</nav>
		</div>
	</div>
</header>