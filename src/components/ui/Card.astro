---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<div class="bg-white rounded-lg shadow-lg p-8 hover:shadow-xl transition-shadow duration-300">
	<a href={href} class="block h-full">
		<h3 class="text-2xl font-bold mb-4 text-gray-800">{title}</h3>
		<p class="text-gray-600 mb-4">{body}</p>
		<span class="text-blue-600 font-semibold inline-flex items-center">
			Learn More
			<svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
			</svg>
		</span>
	</a>
</div> 