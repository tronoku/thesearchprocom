---
interface Props {
  name: string;
  class?: string;
}

const { name, class: className = "w-full h-64" } = Astro.props;

// Default gradient background
const defaultBackground = "linear-gradient(135deg, #2B82BC 0%, #57ADE1 100%)";
---

<div 
  class={`${className} rounded-lg bg-blue-600`}
  style={`background: ${defaultBackground}`}
>
  <div class="w-full h-full flex items-center justify-center text-white opacity-20">
    <svg class="w-32 h-32" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path 
        stroke-linecap="round" 
        stroke-linejoin="round" 
        stroke-width="2" 
        d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
      />
    </svg>
  </div>
</div> 