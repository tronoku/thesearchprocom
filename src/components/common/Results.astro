---
interface ResultStat {
  value: string;
  label: string;
}

interface Props {
  title: string;
  subtitle?: string;
  stats: ResultStat[];
  bgColor?: 'white' | 'gray';
}

const { 
  title, 
  subtitle, 
  stats,
  bgColor = 'gray'
} = Astro.props;

const bgClass = bgColor === 'white' ? 'bg-white' : 'bg-gray-50';
---

<section class={`py-16 ${bgClass}`}>
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-4">{title}</h2>
    {subtitle && <p class="text-gray-600 text-center mb-12">{subtitle}</p>}
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {stats.map(stat => (
        <div class={`${bgColor === 'white' ? 'bg-gray-50' : 'bg-white'} p-8 rounded-lg shadow-sm text-center`}>
          <div class="text-4xl font-bold text-blue-600 mb-2">{stat.value}</div>
          <p class="text-gray-600">{stat.label}</p>
        </div>
      ))}
    </div>
  </div>
</section> 