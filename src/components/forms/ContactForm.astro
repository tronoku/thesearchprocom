<div id="contactFormWrapper">
  <form class="space-y-6" id="contactForm">
    <div>
      <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
      <input
        type="text"
        id="name"
        name="name"
        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-colors"
        placeholder="John Smith"
      />
    </div>

    <div>
      <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
      <input
        type="email"
        id="email"
        name="email"
        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-colors"
        placeholder="john@example.com"
      />
    </div>

    <div>
      <label for="website" class="block text-sm font-medium text-gray-700 mb-1">Website (optional)</label>
      <input
        type="url"
        id="website"
        name="website"
        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-colors"
        placeholder="https://yourwebsite.com"
      />
    </div>

    <div>
      <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
      <textarea
        id="message"
        name="message"
        rows="4"
        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-colors resize-none"
        placeholder="Tell us about your project..."
      ></textarea>
    </div>

    <button
      type="submit"
      class="w-full bg-blue-600 text-white py-3 px-6 rounded-lg font-semibold hover:bg-blue-700 transition-colors"
    >
      Send Message
    </button>
  </form>
</div>

<div id="thanksMessage" class="hidden">
  <div class="text-center p-8 space-y-4">
    <svg class="w-16 h-16 text-green-500 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>
    <h3 class="text-2xl font-bold text-gray-900">Thanks for reaching out!</h3>
    <p class="text-gray-600">We'll get back to you within one business day.</p>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Check if user has already submitted the form
    if (document.cookie.includes('form_submitted=true')) {
      showThanksMessage();
    }

    const form = document.getElementById('contactForm');
    
    if (form) {
      form.addEventListener('submit', (e) => {
        e.preventDefault();
        
        // Set cookie to expire in 30 days
        const d = new Date();
        d.setTime(d.getTime() + (30*24*60*60*1000));
        document.cookie = `form_submitted=true;expires=${d.toUTCString()};path=/`;
        
        showThanksMessage();
      });
    }
  });

  function showThanksMessage() {
    const formWrapper = document.getElementById('contactFormWrapper');
    const thanksMessage = document.getElementById('thanksMessage');
    
    if (formWrapper && thanksMessage) {
      formWrapper.classList.add('hidden');
      thanksMessage.classList.remove('hidden');
    }
  }
</script> 